@model LeaveManagement.Entity.UserEntity
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/LayoutPage1.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body>
    <div class="container my-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        <h2 class="text-center" style="color: #212529; font-family: 'Times New Roman'">Register</h2>
                    </div>
                    <div class="card-body">
                        @using (Html.BeginForm("Register", "user", FormMethod.Post))
                        {
                            <p class="text-center text-danger">@ViewBag.UserAlreadyExistMsg</p>
                            <div class="mb-3">
                                @Html.LabelFor(temp => temp.Name)
                                @Html.TextBoxFor(temp => temp.Name, new {  @class = "form-control" })
                                @Html.ValidationMessageFor(t=>t.Name)
                               
                            </div>

                            <div class="mb-3">
                                @Html.LabelFor(temp => temp.UserType)
                                @Html.DropDownListFor(temp => temp.UserType, new SelectList(ViewBag.UserTypes, "UserTypeId", "UserTypeName"), "Please Select", new { @class = "form-control" })
                                @Html.ValidationMessageFor(t=>t.UserType)
                            </div>

                            <div class="mb-3">
                                @Html.LabelFor(temp => temp.Email)
                                @Html.TextBoxFor(temp => temp.Email, new { @class = "form-control" })
                                @Html.ValidationMessageFor(t => t.Email)
                            </div>

                            <div class="mb-3">
                                @Html.LabelFor(temp => temp.Password)
                                @Html.PasswordFor(temp => temp.Password, new { @class = "form-control" })
                                @Html.ValidationMessageFor(t => t.Password)
                            </div>

                            <div class="mb-3">
                                @Html.LabelFor(temp => temp.ConfirmPassword)
                                @Html.PasswordFor(temp => temp.ConfirmPassword, new { @class = "form-control" })
                                @Html.ValidationMessageFor(t => t.ConfirmPassword)
                                @Html.ValidationMessage("register_error")
                            </div>

                            <button type="submit" class="btn btn-primary">Submit</button>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

</body>
</html>
